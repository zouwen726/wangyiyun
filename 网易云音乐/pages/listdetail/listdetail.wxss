page{
  padding: 0 30rpx;
  color: #555;
}
.listheader{
  display: flex;
}
.listheader .imgbox{
  width: 300rpx;
  height: 300rpx;
  border-radius: 20rpx;
  margin-right: 40rpx;
}
.imgbox image{
  width: 300rpx;
  height: 300rpx;
  
}
.listheader .txtbox .name{
  /* color: white; */
  font-size: 40rpx;
}
.txtbox .wangyi{
  height: 80rpx;
  display: flex;
  /* align-items: center; */
  margin-top: 20rpx;
  align-items: center;
}
.listheader .txtbox {
  width: 350rpx;
  padding-right: 20rpx;
}
.wangyi view{
  /* width: 50rpx;
  height: 50rpx; */
  margin-right: 20rpx;
}
.wangyi view image{
  width: 50rpx;
