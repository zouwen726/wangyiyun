/* pages/play/play.wxss */
page{
  height: 100%;
  position: fixed;
  background-color: black;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
}
.bg{
  width: 160%;
  height: 100%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  opacity: 0.4;
  z-index: -1;
  filter: blur(30px);
}
.musicName{
  position: relative;
  text-align: center;
  font-size: 50rpx;
  color: white;
  line-height: 100rpx;
  /* background-color: yellow; */
  /* 调整文字行数 */
  display: -webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-indent: 50rpx;
  text-overflow: ellipsis;
}
swiper{
  /* background-color: pink; */
  flex: 1;
}
swiper imgbox{
  position: relative;
  /* display: flex; */
}
swiper swiper-item image{
  display: block;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  border: 100rpx solid #161616;
  box-shadow: 0rpx 0rpx 100rpx rgb(231, 216, 216);
  position: relative;
  left: 0;
  right: 0;
  top: 70rpx;
  bottom: 0;
  margin: auto;
  animation: imgplay 20s linear infinite;
}
@keyframes imgplay{
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(300deg);
  }
}
