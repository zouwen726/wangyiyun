/* pages/songlist/songlist.wxss */
/* 轮播图 */
page{
  padding: 10rpx;
  box-sizing: border-box;
}
::-webkit-scrollbar{
  display: none;
}
swiper{
  width: 100%;
  height: 270rpx;
  margin: 10rpx auto;
  background-color: rgb(240, 240, 240);
}
swiper swiper-item{
  width: 100%;
  border-radius: 15rpx;
}
swiper swiper-item image{
  display: block;
  width: 100%;
  height: 100%;
}
/* tablist */
.tablist{
  display: flex;
  height: 200rpx;
  /* background-color: pink; */
  justify-content: space-around;
  align-items: center;
}
.tablist .tabitem{
  width: 120rpx;
  text-align: center;

}
.tabitem image{
  width: 100rpx;
  height: 100rpx;
}
.tabitem view{
  font-size: 24rpx;
  color: #666666;
}
/* 热门歌手 */
.title{
  margin: 20rpx 0;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 30rpx;
  color: #333;
  border-left: 4rpx solid #0bb8d6;
  padding-left: 28rpx;
}
.hotlist{
  height: 250rpx;
  display: flex;
  overflow: auto;
  align-items: center;
}
.hotlist .item {
  width: 200rpx;
  text-align: center;
  margin-right: 20rpx;
}
.hotlist .item image{
  width: 200rpx;
  height: 160rpx;
  /* height: auto; */
  text-align: center;
  border-radius: 10rpx;
}
.hotlist .item text{
  font-size: 28rpx;
  color: #4d4d4d;
}
/* 最新音乐 */
.musicbox{
  margin-top: 10rpx;
}
.musicbox .item{
  display: flex;
  padding: 10rpx 0rpx ;
  justify-content: space-between;
  border-bottom: 1rpx solid rgb(241, 241, 241);
  /* margin-left: 32rpx; */
}
.item .txtbox{
  display: flex;
  flex-direction: column;
  width: 490rpx;
  /* background-color: palevioletred; */
}
.item .playimg{
  width: 100rpx;
  height: 100%;
  display: flex;
}
.item .playimg image{
  width: 60rpx;
  height: 60rpx;
  display: block;
}
.item .txtbox .mname{
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}
.item .txtbox .name{
  font-size: 28rpx;
  color: #666;
}
.namebox{
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.namebox image{
  width: 30rpx;
  height: 20rpx;
  display: block;
  margin-right: 15rpx;
}

.item .picbox{
  width: 110rpx;
  width: 110rpx;
}
.item .picbox image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
::-webkit-scrollbar{
  display: none;
}