.title{
  margin: 10rpx 10rpx;
}
.mvlist{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}
.mvlist .mvitem{
  width: 45%;
 /* height: 250rpx; */
 /* background-color: orange; */
 position: relative;
 /* bottom: 20rpx; */
}
.mvlist .mvitem .imgbox{
  width: 100%;
  height: 200rpx;
  position: relative;
}
.mvlist .imgbox >image{
  width: 100%;
  height: 100%;
  display: block;
}
.countbox{
  position: absolute;
  height: 50rpx;
  display: flex;
  bottom: 0;
  left: 20rpx;
  align-items: center;
  

}
.countbox>image{
  width: 40rpx;
  display: block;
  height: 40rpx;
}
.countbox>view{
  font-size: 26rpx;
  color: white;
  margin-left: 10rpx;
}
.mvitem > .txt{
  font-size: 26rpx;
  color: #444;
  width: 300rpx;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-line-clamp: 3;
  padding: 10rpx 0rpx;
  box-sizing: border-box;
}