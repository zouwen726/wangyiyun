/* pages/search/search.wxss */
page{
  padding: 25rpx;
  box-sizing: border-box;
}
.searchbox{
  width: 100%;
  height: 90rpx;
  background-color: rgb(231, 231, 231);
  border-radius: 60rpx;
  overflow: hidden;
  align-items: center;
  display: flex;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.searchbox image{
  width: 60rpx;
  height: 60rpx;
}
.searchbox .txt{
  /* background-color: yellow; */
  flex: 1;
  height: 80rpx;
  padding-left: 8rpx;
  font-size: 32rpx;
}
/* 热搜 */

.searchlist .item{
  display: flex;
  align-items: center;
  padding: 20rpx 0rpx;
}
.searchlist .nub{
  font-size: 35rpx;
  /* font-weight: bold; */
  width: 90rpx;
  text-align: center;
  color: #555;
}
.title{
  font-size: 40rpx;
  line-height: 60rpx;
}
.con{
  width: 200rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.con .name{
  font-size: 35rpx;
  /* font-weight: bold; */
  color: rgb(75, 74, 74);
}
.con .txt{
  font-size: 25rpx;
  color: #888;
  margin-top: 10rpx;
}
.icon{
  width: 60rpx;
  height: 48rpx;
  margin-left: 10rpx;
}
.score{
  font-size: 28rpx;
  color: #888;
}
.searchlist view:nth-child(1) .nub,.searchlist view:nth-child(2) .nub,.searchlist view:nth-child(3) .nub{
  color: orangered;
}
/* .searchlist view:nth-child(1){
  color: orangered;
} */
/* 搜索结果 */
.musicbox .item{
  display: flex;
  padding: 10rpx 0rpx ;
  justify-content: space-between;
  border-bottom: 1rpx solid rgb(241, 241, 241);
  margin-left: 32rpx;
}
.item .txtbox{
  display: flex;
  flex-direction: column;
  flex: 1;
}
.item .playimg{
  width: 100rpx;
  height: 100%;
  display: flex;
}
 .item .playimg image{
  width: 60rpx;
  height: 60rpx;
  display: block;
}
 .item .txtbox .mname{
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 600rpx;
}
 .item .txtbox .name{
  font-size: 28rpx;
  color: #666;
}

 .namebox image{
  width: 30rpx;
  height: 20rpx;
}
